<style>
    .dli-plus {
        display: inline-block;
        width: 5vh;
        height: 0.5vh;
        background: currentColor;
        border-radius: 0.1em;
        position: relative;
        margin:auto;
        color: var(--primary-color);
    }

	.dli-plus::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: inherit;
		border-radius: inherit;
		transform: rotate(90deg);
	}

	.plus{
        background-color: var(--tertiary-color);
	}
    .circle-button {
        display:flex;
        line-height: 9vh;
        padding: 0;
        height: 9vh;
        width: 9vh;
        border-radius: 50%;
        text-align: center;
        cursor: pointer;
        transition: transform 0.3s ease;
		box-shadow: rgba(0, 0, 0, 0.56) 0px 4px 6px;
        user-select:none;
    }

        .circle-button:hover {
            filter:brightness(1.1);
        }

	  .circle-button:active {
		box-shadow: 0 2px 3px rgba(0, 0, 0, 0.8);
            filter:brightness(0.9);
	  }

    
</style>

<div class="plus circle-button @Class" @onclick="OnClick">
	<span class="dli-plus"></span>
</div>
@code {
	[Parameter]
	public EventCallback<MouseEventArgs> OnClick{ get; set;}
	[Parameter]
	public string Class { get; set; }
}
