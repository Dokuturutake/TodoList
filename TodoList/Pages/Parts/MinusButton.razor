<style>
    .dli-minus {
        display: inline-block;
        vertical-align: middle;
        width: 1em;
        height: 0.1em;
        background: currentColor;
        border-radius: 0.1em;
        position: relative;
        color: #DECE8D;
    }

	.minus{
        background-color:#579BB1;
	}
    .circle-button {
        line-height:50px;
        padding: 0;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        text-align: center;
        font-size: 30px;
        cursor: pointer;
        transition: transform 0.3s ease;
		box-shadow: rgba(0, 0, 0, 0.56) 1px 4px 11px;
		transition: box-shadow 0.3s ease;
		transition: filter 0.3s ease;
        user-select:none;
        margin: 10px;
    }

        .circle-button:hover {
            filter:brightness(1.1);
        }

	  .circle-button:active {
		box-shadow: 0 2px 5px rgba(0, 0, 0, 0.8);
            filter:brightness(0.9);
	  }

    
</style>

<div class="minus circle-button" @onclick="OnClick">
	<span class="dli-minus"></span>
</div>
@code {

	[Parameter]
	public EventCallback<MouseEventArgs> OnClick{ get; set;}
}
